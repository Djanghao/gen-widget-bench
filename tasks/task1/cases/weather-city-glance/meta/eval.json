{
  "caseId": "weather-city-glance",
  "name": "Weather City Glance Widget",
  "subtask": "instruction-image-target",
  "rules": [
    {
      "type": "exists",
      "target": { "eid": "root", "description": "Root widget container" }
    },
    {
      "type": "exists",
      "target": { "eid": "header", "description": "Header section" }
    },
    {
      "type": "exists",
      "target": { "eid": "alert-banner", "description": "Alert banner" }
    },
    {
      "type": "exists",
      "target": { "eid": "forecast-grid", "description": "Hourly forecast grid" }
    },
    {
      "type": "hierarchy",
      "parent": { "eid": "root", "description": "Root container" },
      "child": { "eid": "header", "description": "Header inside root" }
    },
    {
      "type": "hierarchy",
      "parent": { "eid": "root", "description": "Root container" },
      "child": { "eid": "forecast-grid", "description": "Forecast grid inside root" }
    },
    {
      "type": "text-contains",
      "target": { "eid": "city-name", "description": "City name element" },
      "expected": "Tiburon"
    },
    {
      "type": "text-contains",
      "target": { "eid": "current-temp", "description": "Current temperature" },
      "expected": "65"
    },
    {
      "type": "text-contains",
      "target": { "eid": "high-low", "description": "High/low temperatures" },
      "expected": "72"
    },
    {
      "type": "text-contains",
      "target": { "eid": "high-low", "description": "High/low temperatures" },
      "expected": "55"
    },
    {
      "type": "text-contains",
      "target": { "eid": "condition-text", "description": "Condition text" },
      "expected": "Clear"
    },
    {
      "type": "text-contains",
      "target": { "eid": "alert-banner", "description": "Alert banner" },
      "expected": "Patchy fog near shoreline"
    },
    {
      "type": "text-contains",
      "target": { "eid": "stat-humidity", "description": "Humidity stat" },
      "expected": "48"
    },
    {
      "type": "text-contains",
      "target": { "eid": "stat-wind", "description": "Wind stat" },
      "expected": "9"
    },
    {
      "type": "count",
      "selector": "[data-eid='forecast-grid'] > *",
      "description": "Hourly forecast items (6 hour slots)",
      "expected": 6,
      "op": "gte"
    },
    {
      "type": "text-contains",
      "target": { "eid": "hour-0-time", "description": "First hour time label" },
      "expected": "9PM"
    },
    {
      "type": "style",
      "target": { "eid": "root", "description": "Root container" },
      "property": "borderRadius",
      "expected": "24px"
    },
    {
      "type": "style",
      "target": { "eid": "root", "description": "Root container" },
      "property": "maxWidth",
      "expected": "360px"
    },
    {
      "type": "screenshot",
      "maxPixelDiffPercent": 15,
      "viewportWidth": 500,
      "viewportHeight": 600
    }
  ]
}
